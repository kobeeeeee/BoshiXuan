<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_input_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="请输入支付密码"
            android:textSize="16sp"
            android:textColor="@color/wallet_black"
            android:id="@+id/textView83"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <LinearLayout
            android:id="@+id/contentpay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_below="@+id/textView83">
            <EditText
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:id="@+id/editText"
                android:gravity="center_horizontal"
                android:textSize="50dp"
                android:textScaleX="1.6"
                android:inputType="numberPassword"
                android:maxLength="6"
                android:background="@null"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp" />

        </LinearLayout>
        <Button
            android:id="@+id/negativeButton"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:background="@drawable/dialog_pay_cancel"
            android:layout_below="@+id/contentpay"
            android:layout_marginLeft="37dp"
            android:layout_marginTop="16dp" />
        <Button
            android:id="@+id/positiveButton"
            android:layout_width="115dp"
            android:layout_height="40dp"
            android:background="@drawable/dialog_pay_confirm"
            android:layout_below="@+id/contentpay"
            android:layout_toRightOf="@+id/negativeButton"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="16dp"/>
    </RelativeLayout>
</LinearLayout>
